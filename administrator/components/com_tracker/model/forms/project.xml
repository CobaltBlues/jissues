<?xml version="1.0" encoding="utf-8"?>
<form>
    <field
            name="id"
            type="text"
            default="0"
            label="ID"
            description="The primary key"
            class="readonly"
            readonly="true"/>

    <field
            name="title"
            type="text"
            label="Title"
            description=""
            class="inputbox"
            required="true"/>
    <field
            name="alias"
            type="text"
            label="Alias"
            description="The Alias is used in URLs"
            class="inputbox"
            required="true"/>

    <field
            name="gh_user"
            type="text"
            label="GitHub User"
            description="The GitHub User (e.g. joomla)"
            class="inputbox"/>

    <field
            name="gh_project"
            type="text"
            label="GitHub Project"
            description="The actual repository (e.g. joomla-cms)"
            class="inputbox"/>

    <field
            name="ext_tracker_link"
            type="text"
            label="External Tracker Link"
            description="A tracker link format (e.g. http://tracker.com/issue/%d)"
            class="inputbox"/>
</form>
